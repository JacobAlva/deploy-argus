# Argus Agent Deployment Configuration Template
# Copy this file to terraform.tfvars and fill in your values

# ==============================================================================
# REQUIRED CONFIGURATION
# ==============================================================================

# Your company/organization name (alphanumeric and hyphens only)
customer_name = "your-company-name"

# Agent API key from Argus dashboard (keep this secret!)
# Generate at: https://dashboard.argus-dspm.com/agents/new
agent_api_key = "argus_sk_your_api_key_here"

# ==============================================================================
# AWS CONFIGURATION  
# ==============================================================================

# AWS region where you want to deploy the agent
aws_region = "us-east-2"

# Argus backend URL (use production URL)
argus_backend_url = "https://api.argus-dspm.com"

# ==============================================================================
# INSTANCE CONFIGURATION (Optional)
# ==============================================================================

# EC2 instance type for the agent
# Options: t3.small, t3.medium, t3.large, t3.xlarge, c5.large, c5.xlarge  
# instance_type = "t3.small"

# Environment name
# environment = "dev"

# ==============================================================================
# SECURITY CONFIGURATION (Optional - for debugging only)
# ==============================================================================

# Enable SSH access (NOT recommended for production)
# enable_ssh_access = false

# CIDR blocks allowed for SSH access (required if enable_ssh_access = true)
# Replace with your office/home IP address
# allowed_cidr_blocks = ["203.0.113.0/32"]

# EC2 Key Pair name for SSH access (must exist in your AWS account)
# key_pair_name = "my-key-pair"

# ==============================================================================
# ADVANCED CONFIGURATION (Optional)
# ==============================================================================

# Enable auto-scaling for high availability
# auto_scaling_enabled = false

# Enable detailed CloudWatch monitoring  
# enable_detailed_monitoring = true

# CloudWatch log retention period (days)
# log_retention_days = 30

# Additional tags for all resources
# additional_tags = {
#   Project = "data-security"
#   Owner   = "security-team"
#   Environment = "dev"
# }